<body class="myprofile">

	<h1 style="text-align:center;font-size:50px;">
		My Profile
		<br>
	</h1>

<div class="container">
	<div class="row">
		<div class="col-sm-4">
			<p style="font-size:20px;">
				{{#each registration}}
				<img class="img-responsive" src="{{profPhoto}}" placeholder="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ad/Placeholder_no_text.svg/1024px-Placeholder_no_text.svg.png">
				{{/each}}
			</p>
		</div>
		<div class="col-sm-8">
			<div class="well">
			<p style="font-size:20px;">
				{{#each registration}}
				{{username}}, {{userexperience}}
				<br>
				<form method="get" action="/updateProfile">
 					<button type="submit" class="btn btn-default" href="/updateProfile"> Update Profile</button>
				</form>
				<br>
				{{firstname}} {{lastname}}
				<br>
				{{userdescription}}
				<br>
				{{/each}}
			</p>
		</div>
	</div>

	
	<br>

	<form method="get" action="/deletecookie">
  	  <button type="submit" class="btn btn-default btn-sml btn-block" href="/deletecookie"> Logout</button>
  	</form>
</div>

