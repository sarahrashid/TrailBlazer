<body class="postTrail">

<h1 style="text-align:center;font-size:50px;">
		Create A Post
		<br>
	</h1>

<div class="container">
	<form role="form" method="post" action="/postTrail">
		<div class="form-group">
			<label for="picture"> Picture URL: </label>
  			<input type="text" class="form-control" name="picture" id="picture" placeholder="Enter Picture URL">
		</div>
		<div class="form-group">
			<label for="trailLocation"> Trail Location: </label>
  			<input type="trailLocation" class="form-control" name="trailLocation" id="trailLocation" placeholder="Enter Trail Location">
		</div>
		<div class="form-group">
		<label for="trailDescription"> Trail Description: </label>
		<textarea type="text" class="form-control" name="trailDescription" id="trailDescription" cols="40" rows="5">
		</textarea>
		</div>
		<div class="form-group">
		<label for="trailReccomendation"> Trail Recommendations: </label>
		<textarea type="text" class="form-control" name="trailReccomendation" id="trailReccomendation" cols="40" rows="5">
		</textarea>
		</div>

		<button type="submit" class="btn btn-default">Post</button>
		<br>
	</form>
</div>
</body>